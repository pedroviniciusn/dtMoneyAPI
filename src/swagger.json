{
  "openapi": "3.0.0",
  "info": {
    "title": "dtmoney Rest API",
    "description": "Income and expense control, add your earnings and expenses",
    "version": "1.0.0",
    "contact": {
      "email": "pedrovinicius.dev@gmail.com"
    }
  },
  "paths": {
    "/api/create_user": {
      "post": {
        "tags": ["User"],
        "summary": "Create account",
        "description": "Create a new account",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "example example",
                  "email": "example@example.com",
                  "password": "example123"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created account successful.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "User already exists.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/sessions": {
      "post": {
        "tags": ["Login"],
        "summary": "Login",
        "description": "Login using your e-mail and password, previously registered",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "email": "example@example.com",
                  "password": "example123"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type":"string"
                        }, 
                        "email": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Email or password incorrect",
            "content": {
              "application/json": {
                "schema": {
                  "type":"object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/me": {
      "get": {
        "tags": ["User"],
        "summary": "User logged",
        "description": "Logged-in user, with access to all application functionalities.",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "transactions": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "title": {
                          "type": "string"
                        },
                        "amount": {
                          "type": "number"
                        },
                        "category": {
                          "type": "string"
                        },
                        "type": {
                          "type": "string"
                        },
                        "created_at": {
                          "type": "string"
                        },
                        "updated_at": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    {
                      "$ref": "#components/schemas/tokenMissing"
                    },
                    {
                      "$ref": "#components/schemas/userDoesNotExists"
                    }, 
                    {
                      "$ref":"#components/schemas/invalidToken"
                    }
                  ]
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  },
  "components":{
    "securitySchemes": {
      "bearerAuth": {
        "In": "headers.authorization",
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "tokenMissing": {
        "description": "Token missing",
        "type":"object",
          "properties": {
            "message": {
              "type": "string"
            }
          }
      },
      "userDoesNotExists": {
        "description": "User does not exists",
        "type":"object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "invalidToken": {
        "description": "Invalid token",
        "type": "object",
        "properties": {
          "message": {
            "type": "number"
          }
        }
      }
    }
  }
}